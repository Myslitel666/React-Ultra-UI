{
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"], 
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx", 
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src"]
}
