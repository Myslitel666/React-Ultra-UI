{
  "name": "react-ultra-ui",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "vite dev --open",
    "build": "npm run clean && vite build && npm run package",
    "lint": "eslint .",
    "preview": "vite preview",
    "generate-types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "package": "npm run build:js && npm run build:types",
    "build:js": "babel src/lib --out-dir dist --copy-files --extensions \".ts,.tsx\" --source-maps true",
    "build:types": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "babel": "^6.23.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-loader": "^10.0.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "exports": {
		".": {
      "import": "./dist/ultra-ui.es.js", 
      "require": "./dist/ultra-ui.umd.js" 
		}
  }
}
